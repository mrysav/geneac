.page-background {
  &::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    background-image: url("<%= asset_path 'bg_lonelytree.jpg' %>");
    background-position: bottom left;
    background-repeat: no-repeat;
    background-size: cover;

    filter: blur(5px) grayscale(70%);

    z-index: -1;
  }

  position: absolute;
  height: 100vh;
  width: 100vw;
  bottom: 0;
  left: 0;
  z-index: -1;
}

.search-bar-opacity input {
  opacity: 0.65;
}
