<!DOCTYPE html>
<html>
  <head>
    <title><%= (@title + ' - ') if @title %><%= setting(:site_title) || t('nav.geneac') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', 'data-turbolinks-track': 'reload', 'media': 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <%= render 'shared/navbar', show_search_bar: !(true == @nav_hide_search) %>
    <% if flash.any? %>
      <div class="flashes">
        <% flash.each do |key, value| -%>
          <div class="flash flash-<%= key %>"><%= value.html_safe %></div>
        <% end -%>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
